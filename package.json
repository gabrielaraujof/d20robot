{
  "name": "d20robot",
  "version": "0.1.0",
  "description": "A Telegram bot for playing Dungeons and Dragons",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "npm run build && npm start",
    "watch": "nodemon --watch src -e ts,json --exec npm run dev",
    "test": "jest"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gabrielaraujof/d20robot.git"
  },
  "keywords": [
    "bot",
    "dnd",
    "telegram",
    "dice-roll"
  ],
  "author": "Gabriel Araujo <contact@gabrielaraujo.dev>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gabrielaraujof/d20robot/issues"
  },
  "homepage": "https://github.com/gabrielaraujof/d20robot#readme",
  "dependencies": {
    "dotenv": "^8.2.0",
    "rpg-dice-roller": "^4.1.1",
    "telegraf": "^3.38.0"
  },
  "devDependencies": {
    "@types/jest": "^25.2.3",
    "@types/node": "^14.0.12",
    "jest": "^26.0.1",
    "nodemon": "^2.0.4",
    "ts-jest": "^26.1.0",
    "typescript": "^3.9.5"
  },
  "engines": {
    "node": "12.x"
  }
}
